pipeline {
    agent any

    environment {
        CONTAINER_NAME = 'nestjs-app'
        IMAGE_NAME = 'nestjs-image'
        EMAIL = "agrawalnamit2001@gmail.com"
        PORT = "3000"
    }

    stages {
        stage('Clone Repo'){
            steps {
                git branch: 'main', url: 'https://github.com/namitagrawal2001/cicd-pipelin-nodjs.git'
            }  
        }

        stage('Build Docker Image') {
            steps {
                sh 'docker build -t $IMAGE_NAME .'
            }
        }

        stage('Stop & Remove old container') {
            steps {
                sh '''
                    docker stop $CONTAINER_NAME || true
                    docker rm $CONTAINER_NAME || true
                '''
            }
        }

        stage('Run Docker Container') {
            steps {
                sh "docker run -d -p ${PORT}:${PORT} --name $CONTAINER_NAME $IMAGE_NAME"
            }
        }

        stage('Send Email Notification') {
            steps {
                emailext(
                    subject: "NodeJS Application Deployed Successfully on EC2",
                    body: "Your NodeJS application has been successfully deployed! http://13.126.167.150:${PORT}/",
                    to: "${EMAIL}"
                )
            }
        }
    }
}
